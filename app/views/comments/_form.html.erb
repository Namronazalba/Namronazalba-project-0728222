<% if comment.errors.any? %>
  <% comment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<div class="form-group">
  <%= f.label :comment %>
  <%= f.text_field :comment, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.submit class: 'btn btn-primary' %>
</div>
